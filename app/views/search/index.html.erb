<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>

<%= form_tag("/search/index", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

	 <% movie = [] %>
	 
<% @search.each_with_index do |x,index| %>
    
        <% if index == 0 then%>
            <h2><%= x["title"] %></h2>
        <%end%>

        <% if movie[index] != movie[index-1] then%>

        <h1><%= x["title"] %></h1>
        <%end%>
        
        <li><%= x["locations"] %></li>
<% end %>